<div class="row">
	<div class="col-md-3">
		<ul class="sidebar-list">
			<li class="sidebar-item"><%= link_to "Your Listing", items_path, class: "sidebar-link active" %></li>
			<li class="sidebar-item"><%= link_to "Your Reservations", items_path, class: "sidebar-link" %></li>
		</ul>
	</div>
	<div class="col-md-9">
		<div class="panel panel-default">
			<div class="panel-heading">
				Listings
			</div>
			<div class="panel-body">

				<% @items.each do |item| %>
					<div class="row">
						<div class="col-md-2">
							<%= image_tag item.photos[0].image.url(:thumb) if item.photos.length > 0 %>
						</div>
						<div class="col-md-7">
							<h4><%= item.item_name %></h4>
						</div>
						<div class="col-md-3 right">
							<%= link_to "Update", edit_item_path(item), class: "btn btn-primary" %>
						</div>
					</div>
				<% end %>

			</div>
		</div>
	</div>
</div>
