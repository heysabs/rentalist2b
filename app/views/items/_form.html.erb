<div class="panel panel-default">
  <div class="panel-heading">
  Rent Your Item
  </div>
  <div class="panel-body">
    <div class="container">
      <%= form_for @item, :html => { multipart: true } do |f| %>

      <div class="row">
        <div class="col-md-4 select">
          <div class="form-group">
            <label>Item Type</label>
            <%= f.select :item_type, [["Baking & Cooking", "Baking & Cooking"], ["Costumes", "Costumes"], ["Inflatables", "Inflatables"], ["Board & Card Games", "Board & Card Games"], ["Console Games", "Console Games"], ["Outdoors", "Outdoors"], ["Sports", "Sports"], ["Water Sports", "Water Sports"], ["Tech Gadgets", "Tech Gadgets"]],
            id: "item_type", prompt: "Select...", class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-8">
          <div class="form-group">
            <label>Item name</label>
            <%= f.text_field :item_name, placeholder: "Be clear and descriptive!", class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-8">
          <div class="form-group">
            <label>Description</label>
            <%= f.text_area :description, rows: 5, placeholder: "Share more about your item", class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-8">
          <div class="form-group">
            <label>Address</label>
            <%= f.text_field :address, placeholder: "What is your address?", class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <label>Daily Price</label>
            <div class="input-group">
              <div class="input-group-addon">$</div>
              <%= f.text_field  :price, placeholder: "eg. $10", class: "form-control" %>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <span class="btn btn-default btn-file">
                <i class="fa fa-cloud-upload fa-lg"></i> Upload Photos
                <%= file_field_tag "images[]", type: :file, multiple: true %>
            </span>
          </div>
        </div>
      </div>

      <div id="photos"><%= render 'photos/list' %></div>

      <div class="actions">
        <%= f.submit "Save", class: "btn btn-primary" %>
      </div>

      <% end %>
    </div>
  </div>
</div>
