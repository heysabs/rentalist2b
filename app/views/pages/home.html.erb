<div class="row">
  <% @items.each do |item| %>

  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading preview">
        <%= image_tag item.photos[0].image.url(:medium) if item.photos.length > 0 %>
      </div>
      <div class="panel-body">
        <%= link_to item.item_name, item %>
      </div>
    </div>
  </div>
  <% end %>
</div>
